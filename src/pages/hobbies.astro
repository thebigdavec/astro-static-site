---
import MainLayout from '../layouts/MainLayout.astro'
const hobbies = [
  'Software development',
  'Music',
  'Photography',
  'Comedy',
  'Art'
]
---

<MainLayout pageTitle="Hobbies">
  <ul
    class="w-48 text-sm font-medium rounded-lg border bg-gray-700 border-gray-600 text-white overflow-hidden">
    {
      hobbies.map(hobby => (
        <li class="py-2 px-4 w-full border-b border-gray-600">{hobby}</li>
      ))
    }
  </ul>
</MainLayout>

<style>
  ul {
    list-style: none;
  }
</style>
